{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Google's stock price over time.",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/bran0010/vis2/master/data/co2.csv"
  },
  "mark": {
    "type": "area",
    "line": {
      "color": "black"
    },
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {
          "offset": 0,
          "color": "darkgray"
        },
        {
          "offset": 1,
          "color": "black"
        }
      ]
    }
  },
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal"
    },
    "y": {
      "field": "CO2",
      "type": "quantitative",
      "scale": {
        "zero": false
      }
    }
  }
}