{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "transform": [],
  "width": "container",
  "height": 150,
  "data": {
    "url": "https://raw.githubusercontent.com/bran0010/vis2/master/data/countrytemp.csv"
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "timeUnit": "yearmonthdate",
      "field": "Year",
      "type": "ordinal",
      "title": "Time",
      "axis": {
        "format": "%Y",
        "labelAngle": 90,
        "labelOverlap": false,
        "labelColor": {
          "condition": {
            "test": {
              "timeUnit": "monthdate",
              "field": "value",
              "equal": {"month": 1, "date": 1}
            },
            "value": "black"
          },
          "value": null
        }
        
      }
    },
    "color": {
      "aggregate": "sum",
      "field": "TempChange",
      "type": "quantitative",
      "title": "Temperature Change"
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": null
    }
  }
}
